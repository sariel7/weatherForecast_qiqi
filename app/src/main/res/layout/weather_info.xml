<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--顶部的bar-->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@android:color/holo_purple"
        android:gravity="center_vertical"
        >

        <!--
        android:gravity="center_vertical"   限定它里面的内容要垂直居中显示
        android:layout_gravity="center_vertical"    是指它的位置是相对于它父亲的垂直居中
        -->
        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_height="fill_parent"
            android:layout_width="45.0dip"
            android:layout_alignParentLeft="true"
            android:src="@drawable/title_city"
            />
        <ImageView
            android:id="@+id/title_seperator"
            android:layout_height="40.0dip"
            android:layout_width="1.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#ffff"
            />
        <TextView
            android:id="@+id/title_city_name"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_toRightOf="@id/title_seperator"
            android:paddingLeft="5dip"
            android:gravity="center_vertical"
            android:text="北京天气"
            android:textColor="#ffff"
            android:textSize="22.0sp"
            />
        <!--paddingRight是右内边距-->
        <ImageView
            android:id="@+id/title_update"
            android:layout_width="45.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update"
            />
        <ImageView
            android:id="@+id/title_share"
            android:layout_height="45.0dip"
            android:layout_width="45.0dip"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/title_update"
            android:src="@drawable/title_share"/>
        <ImageView
            android:id="@+id/title_location"
            android:layout_height="45.0dip"
            android:layout_width="45.0dip"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"
            />

    </RelativeLayout>

    <!--内容-->
    <LinearLayout
        android:layout_below="@id/title"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical"
        >

        <!--从上往下第一块-->
        <RelativeLayout
            android:id="@+id/content_first"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:paddingTop="10.0dip"
            android:paddingLeft="10.0dip"
            >

            <!--“北京”-->
            <TextView
                android:id="@+id/content_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="北京"
                android:textSize="40.0sp"
                android:singleLine="true"
                android:paddingLeft="15.0dip"
                android:textColor="@android:color/white"/>
            <!--发布时间-->
            <TextView
                android:id="@+id/content_push_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/content_city_name"
                android:text="15:23发布"
                android:textSize="15.0sp"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:paddingLeft="15.0sp"
                android:layout_marginTop="5.0dip"/>
            <!--湿度-->
            <TextView
                android:id="@+id/content_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_push_time"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="10.0dip"
                android:text="湿度：20%"
                android:textColor="@android:color/white"
                android:textSize="15.0sp"/>

            <!--PM那一整块-->
            <LinearLayout
                android:id="@+id/content_pm2.5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingRight="10.dip"
                android:paddingTop="5.0dip"
                android:orientation="vertical"
                >

                <!--pm数据的块-->
                <RelativeLayout
                    android:id="@+id/content_pm2.5_number_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    >
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/content_pm2.5_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1.0dip"
                                android:singleLine="true"
                                android:text="PM2.5"
                                android:textSize="15.0sp"
                                android:textColor="@android:color/white"/>
                            <TextView
                                android:id="@+id/content_pm2.5_number"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:singleLine="true"
                                android:text="48"
                                android:gravity="center"
                                android:textSize="28.0sp"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/content_pm2.5_fell_img"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:paddingRight="15.0dip"
                            android:src="@drawable/biz_plugin_weather_0_50"/>
                    </LinearLayout>
                </RelativeLayout>

                <!--空气质量-->
                <TextView
                    android:id="@+id/content_pm2.5_fell_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5.0dip"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="良"
                    android:textColor="@android:color/white"
                    android:textSize="25.0sp" />

            </LinearLayout>

        </RelativeLayout>

        <!--从上往下第二块-->
        <RelativeLayout
            android:id="@+id/content_second"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10.0dip"
            >
            <ImageView
                android:id="@+id/content_weather_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/biz_plugin_weather_qing"
                />
            <TextView
                android:id="@+id/content_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/content_weather_img"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10.0dip"
                android:text="24日星期三"
                android:textSize="15.0sp"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/content_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/content_weather_img"
                android:layout_below="@id/content_date"
                android:layout_marginTop="3.0dip"
                android:text="21℃~6℃"
                android:textSize="25.0dip"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/content_weather_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/content_weather_img"
                android:layout_below="@id/content_temperature"
                android:layout_marginTop="3.0dip"
                android:text="晴"
                android:textSize="18.0dip"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/content_wind_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/content_weather_img"
                android:layout_below="@id/content_weather_kind"
                android:layout_marginTop="3.0dip"
                android:text="风力：2级"
                android:textSize="15.0dip"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
